<launch>
  <master auto="start"/>

  <param name="/use_sim_time" value="true"/>

  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(env ROBORTS_PATH)/tools/stage/rm_icra_5cm.yaml" respawn="false" />

  <!-- Run the Stage Simulator -->
  <node pkg="stage_ros" type="stageros" name="stageros" args="$(env ROBORTS_PATH)/tools/stage/rm_icra_5cm.world" respawn="false" >

  <!-- Run the Stage Simulator -->
    <param name="base_watchdog_timeout" value="0.05"/>
  </node>

  <!-- Run the fake localization -->
  <!--node name="fake_localization" pkg="fake_localization" type="fake_localization" respawn="false" /-->

  <!-- Run the rviz -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(env ROBORTS_PATH)/tools/stage/rm.rviz" />

</launch>

