<launch>
  <master auto="start"/>

  <param name="/use_sim_time" value="true"/>

  <!-- Run the Stage Simulator -->
  <node pkg="stage_ros" type="stageros" name="stageros" args="$(env RoboRTS_PATH)/tools/stage/rm_icra_5cm.world" respawn="false" >

  <!-- Run the Stage Simulator -->
    <param name="base_watchdog_timeout" value="0.2"/>
  </node>

  <!-- Run the slam -->
  <include file="$(env RoboRTS_PATH)/tools/stage/slam_gmapping.xml"/>

  <!-- Run the rviz -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(env RoboRTS_PATH)/tools/stage/rm_slam.rviz" />

</launch>

